<div class="list-group-item-action d-flex card-header" id="heading_<%= rubric_item.seq %>" data-toggle="collapse" data-target="#collapse_<%= rubric_item.seq %>">
  <span id="seq"><%= rubric_item.seq %></span>. Student WBT
</div>
<div id="collapse_<%= rubric_item.seq %>" class="collapse" aria-labelledby="heading_<%= rubric_item.seq %>" data-parent="#rubric_items_accordion">
  <div class="card-body">
    <%= render partial: '/rubric_items/item', locals: {usage: 'This step runs the student\'s white box tests against both the selected input file and the oracle file.',
                                                       required_items: %w(input_file oracle_file type points criterion response),
                                                       rubric_item: rubric_item,
                                                       default_set: RubricItem.default_set(:student_wbt),
                                                       default_description: RubricItem.default_description(:student_wbt)} %>
  </div>
</div>