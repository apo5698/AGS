<div class="card-body">
  <%= form_with url: users_path, method: 'post' do |form| %>
    <fieldset>
      <legend>Sign up</legend>
      <div class="form-group">
        <%= form.label "user[name]", "Name", class: "required" %>
        <%= form.text_field "user[name]", class: "form-control" %>
      </div>
      <div class="form-group required">
        <%= form.label "user[email]", "Email address", class: "required" %>
        <%= form.email_field "user[email]", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label "user[password]", "Password (6 or more characters)", class: "required" %>
        <%= form.password_field "user[password]", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label "user[password_confirmation]", "Confirm password", class: "required" %>
        <%= form.password_field "user[password_confirmation]", class: "form-control" %>
      </div>
      <%= form.submit "Register", class: "btn btn-primary float-right btn-block" %>
    </fieldset>
  <% end %>
</div>
<div class="card-footer center">
  Already have an account?&nbsp;
  <strong><a href="/sessions/new">Sign in!</a></strong>
</div>