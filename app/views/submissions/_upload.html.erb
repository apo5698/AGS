<div class="row">
  <div class="col-lg-8">
    <%= form_with(url: "/courses/#{@course.id}/assignments/#{@assignment.id}/submissions/upload") do |f| %>
      <div class="form-group">
        <div class="input-group">
          <div class="custom-file">
            <%= f.file_field(:zip, class: 'custom-file-input', accept: 'application/zip', required: true) %>
            <%= f.label(:zip, 'Choose file', class: 'custom-file-label') %>
          </div>
          <div class="input-group-append">
            <%= f.submit('Upload', class: 'input-group-text') %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <!-- Uploading progress -->
  <div class="col-lg-4">
    <div class="toast toast-float" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="false">
      <div class="toast-header">
        <strong class="mr-auto">Upload</strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="toast-body">
        Uploading...<i class="fa fa-spinner fa-spin ml-1"></i>
        <br/>
        Please do not refresh the page.
      </div>
    </div>
    <div class="float-right">
      <%= button_to('Download all', "/courses/#{@course.id}/assignments/#{@assignment.id}/submissions/download_all", method: :get, class: 'btn btn-secondary') %>
    </div>
  </div>
</div>