<div class="row">
  <div class="col-lg-8">
    <%= form_with(url: "/courses/#{@course.id}/assignments/#{@assignment.id}/submissions/upload") do |f| %>
      <div class="form-group">
        <div class="input-group">
          <div class="custom-file">
            <%= f.file_field(:zip, class: 'custom-file-input', accept: 'application/zip', required: true) %>
            <%= f.label(:zip, 'Choose file', class: 'custom-file-label') %>
          </div>
          <div class="input-group-append">
            <%= f.submit('Upload', data: { disable_with: 'Uploading...' }, class: 'input-group-text') %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-lg-4">
    <div class="float-right">
      <%= button_to('Download all', { action: :download_all }, { class: 'btn btn-secondary', method: :get }) %>
    </div>
  </div>
</div>