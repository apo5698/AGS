<div class="modal-header">
  <h5 class="modal-title">
    <%= Student.find(@grading_item.student_id) %> (<%= @grading_item.attachment.filename %>)
  </h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  <% content = if params[:modal_content] == 'output' %>
    <% @grading_item.output.html_safe %>
  <% elsif params[:modal_content] == 'file' %>
    <% @grading_item.attachment.download %>
  <% end %>
  <pre><code><%= content %></code></pre>
</div>
<div class="modal-footer">
  <%= link_to('Download', rails_blob_path(@grading_item.attachment), class: 'btn btn-primary') %>
  <%= button_tag('Close', type: 'button', class: 'btn btn-secondary', data: { dismiss: 'modal' }) %>
</div>