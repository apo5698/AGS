<% if flash[:warning] %>
  <div class="alert alert-dismissible alert-warning new-line">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <span class="new-line"><%= flash[:warning] %></span>
  </div>
<% end %>

