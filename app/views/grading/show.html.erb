<div class="row">
  <table class="table table-hover" id="transparent-table">
    <tbody>
    <tr class="table-light">
      <% step = @step %>
      <td><a href="?step=1">Prepare</a></td>

      <% if step < 2 %>
        <td class="text-muted"><i class="fas fa-chevron-right"></i></td>
        <td class="text-muted">Compile</td>
      <% else %>
        <td><i class="fas fa-chevron-right"></i></td>
        <td><a href="?step=2">Compile</a></td>
      <% end %>

      <% if step < 3 %>
        <td class="text-muted"><i class="fas fa-chevron-right"></i></td>
        <td class="text-muted">Run</td>
      <% else %>
        <td><i class="fas fa-chevron-right"></i></td>
        <td><a href="?step=3">Run</a></td>
      <% end %>

      <% if step < 4 %>
        <td class="text-muted"><i class="fas fa-chevron-right"></i></td>
        <td class="text-muted">Checkstyle</td>
      <% else %>
        <td><i class="fas fa-chevron-right"></i></td>
        <td><a href="?step=4">Checkstyle</a></td>
      <% end %>

      <% if step < 5 %>
        <td class="text-muted"><i class="fas fa-chevron-right"></i></td>
        <td class="text-muted">Summary</td>
      <% else %>
        <td><i class="fas fa-chevron-right"></i></td>
        <td><a href="?step=5">Summary</a></td>
      <% end %>
    </tr>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-lg-3">
    <ul class="list-group">
      <% (0...5).each_with_index do |s, i| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          Student <%= i %> (s<%= i %>)
          <span class="badge badge-success badge-pill">
          <i class="fas fa-check"></i>
        </span>
        </li>
      <% end %>
      <% (0...5).each_with_index do |s, i| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          Student <%= i %> (s<%= i %>)
          <span class="badge badge-danger badge-pill">
          <i class="fas fa-exclamation"></i>
        </span>
        </li>
      <% end %>
      <% (0...5).each_with_index do |s, i| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          Student <%= i %> (s<%= i %>)
          <span class="badge badge-primary badge-pill">
          <i class="fas fa-times"></i>
        </span>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col-lg-9">
    <div class="row">
      <div class="col-lg-12" style="margin-bottom: 4em">
        <% if step == 1 %>
          <%= render partial: "prepare" %>
        <% elsif step == 2 %>
          <%= render partial: "compile" %>
        <% elsif step == 3 %>
          <%= render partial: "run" %>
        <% elsif step == 4 %>
          <%= render partial: "checkstyle" %>
        <% elsif step == 5 %>
          <%= render partial: "summary" %>
        <% end %>
      </div>
      <div class="col-lg-12">
        <a href="?step=<%= @step + 1 %>">
          <button class="btn btn-primary">Next</button>
        </a>
      </div>
    </div>
  </div>
</div>
