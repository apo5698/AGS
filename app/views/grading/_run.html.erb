<div class="row mb-4">
  <div class="col-lg-5">
    <h3>Compiled Classes</h3>
    <%= form_tag({action: :run_selected}, multipart: true, id: @id) do %>
      <div class="list-group mb-2" id="compiled-files">
        <% Dir.glob(@upload_root.join('**', '*.class')).sort.each do |filepath| %>
          <% filename = File.basename(filepath) %>
          <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center code" id=<%= filename %>>
            <%= filename %>
            <% if Dir.glob(filepath.gsub('bin', 'src').gsub('.class', '.java')).empty? %>
              <span class="badge badge-danger" data-toggle="tooltip" data-placement="right" title="Missing source file">
                <i class="fas fa-question"></i>
              </span>
            <% end %>
            <%= radio_button_tag 'file', filename %>
          </a>
        <% end %>
      </div>
      <%= submit_tag 'Run selected', class: 'btn btn-primary' %>
    <% end %>
  </div>
  <div class="col-lg-7">
    <h3>Options</h3>
    <div class="form-group" id="options">
      <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="junit">
        <label class="custom-control-label" for="junit">
          JUnit (<span class="code">-cp "bin:lib/*" org.junit.runner.JUnitCore</span>)
        </label>
      </div>
      <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="customCheck3">
        <label class="custom-control-label" for="customCheck3">
          Some option2
        </label>
      </div>
      <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="customCheck4">
        <label class="custom-control-label" for="customCheck4">
          Some option3
        </label>
      </div>
    </div>
    <button type="button" class="btn btn-primary">Apply to all</button>
    <button type="button" class="btn btn-outline-primary" id="options-select-all">Select all</button>
    <button type="button" class="btn btn-outline-primary" id="options-reset">Reset</button>
  </div>
</div>
<div class="row mb-4">
  <div class="col-lg-12">
    <h3>Custom Run</h3>
    <label class="col-form-label">Enter full command(s) below:</label>
    <div class="form-group" id="custom-compile">
      <div class="input-group mb-2">
        <input type="text" class="form-control" placeholder="java ...">
        <div class="input-group-append">
          <button type="button" class="btn btn-dark disabled">Remove</button>
        </div>
      </div>
    </div>
    <button type="button" class="btn btn-primary" id="custom-add" onclick="add()">Add</button>
  </div>
</div>
<div class="row mb-4">
  <div class="col-lg-12">
    <%= form_tag "/grading/#{@id}/run" %>
    <button class="btn btn-primary">Run custom</button>
  </div>
</div>
<div class="row mb-4">
  <div class="col-lg-12">
    <h3>Console Output</h3>
    <div class="terminal"><%= @console_output %></div>
  </div>
</div>
<script>
  let customCount = 0;

  function add() {
    customAdd(customCount++);
  }
</script>