<div class="row mb-4">
  <div class="col-lg-12">
    <h1>Compile</h1>
  </div>
</div>
<div class="row mb-4">
  <div class="col-lg-5">
    <h3>Source Files</h3>
    <ul class="list-group">
      <li class="list-group-item d-flex justify-content-between align-items-center code">
        Box.java
        <span class="badge badge-success badge-pill"><i class="fas fa-check"></i></span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center active code">
        BoxList.java
        <span class="badge badge-dark badge-pill">12</span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center code">
        BoxUI.java
        <span class="badge badge-primary badge-pill">7</span>
      </li>
    </ul>
  </div>
  <div class="col-lg-7">
    <h3>Options</h3>
    <div class="form-group" id="options">
      <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="bin">
        <label class="custom-control-label" for="bin">
          Nested structure, compile to /bin (<span class="code">-d bin</span>)
        </label>
      </div>
      <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="junit">
        <label class="custom-control-label" for="junit">
          JUnit (<span class="code">-cp "bin:lib/*"</span>)
        </label>
      </div>
      <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="customCheck3">
        <label class="custom-control-label" for="customCheck3">
          Some option3
        </label>
      </div>
      <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="customCheck4">
        <label class="custom-control-label" for="customCheck4">
          Some option4
        </label>
      </div>
    </div>
    <button type="button" class="btn btn-primary">Apply to all</button>
    <button type="button" class="btn btn-outline-primary" id="options-select-all">Select all</button>
    <button type="button" class="btn btn-outline-primary" id="options-reset">Reset</button>
  </div>
</div>
<div class="row mb-4">
  <div class="col-lg-12">
    <h3>Custom Compile</h3>
    <label class="col-form-label">Enter full command(s) below:</label>
    <div class="form-group" id="custom-compile">
      <div class="input-group mb-2">
        <input type="text" class="form-control" placeholder="Command 0">
        <div class="input-group-append">
          <button type="button" class="btn btn-dark disabled">Remove</button>
        </div>
      </div>
    </div>
    <button type="button" class="btn btn-primary" id="custom-add">Add</button>
  </div>
</div>
<div class="row mb-4">
  <div class="col-lg-12">
    <button type="button" class="btn btn-primary" id="compile-all">Compile All</button>
    <button type="button" class="btn btn-outline-primary" id="compile">Compile single file</button>
  </div>
</div>
<div class="row mb-4">
  <div class="col-lg-12">
    <h3>Console Output</h3>
    <div class="terminal"><%= File.open('app/views/grading/sample_compile_output.txt').read %>
    </div>
  </div>
</div>
