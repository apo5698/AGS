<%= form_with url: course_assignment_grading_path(@course, @assignment, rubric), method: :put do |form| %>
  <%= form.fields_for :options do |f| %>
    <%= f.fields_for rubric.id.to_s do |fid| %>
      <div class="form-group" style="max-width: 500px">
        <%= render partial: "grading/options/#{rubric.type.downcase.sub('rubric::', '')}", locals: { form: fid, rubric: rubric } %>
      </div>
    <% end %>
  <% end %>
  <div class="form-group d-flex align-items-center">
    <% spinner = '<span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>' %>
    <%= form.submit('Run', class: 'btn btn-primary', data: { disable_with: "#{spinner} Running...".html_safe }) %>
    <span class="ml-2 text-primary" id="error"></span>
  </div>
<% end %>
