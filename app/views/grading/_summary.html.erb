<div class="row mb-4">
  <div class="col-lg-12">
    <h3>Options</h3>
    <button class="btn btn-primary" id="export">Export</button>
  </div>
</div>
<div class="row mb-4">
  <div class="col-lg-12">
    <h3 id="output">Output</h3>
  </div>
</div>
<script>
  $("button[id='export']").one('click', () => {
    $("h3[id='output']").after(`
      <div>
        <label for="worksheet-output">Processing...</label>
        <div class="progress">
          <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
            aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0" id="bar"></div>
          </div>
        The grading worksheet for <b>Exercise 01</b> is available for downloading:
        <a href="#" download>Grades-CSC 116 (002) SPRG 2020-Day 1-531402_export.csv</a>
      </div>`
    );

    $('.progress-bar').animate({
      width: "100%"
    }, 2000);
  });

  const observer = new MutationObserver((mutations) => {
    mutations.forEach((m) => {
      m.addedNodes?.forEach((node) => {
        alert(node);
      })
    })
  });

  observer.observe(document.getElementById("bar"), {
    childList: true,
    subtree: true,
    attributes: false,
    characterData: false
  })
</script>