<h2>Checkstyle Rules</h2>
<div class="form-group" id="javadoc-rules">
  <% rules = { 'EmptyLineSeparator': 'Class definition should be separated from previous statement',
               'FileTabCharacter': 'Line contains a tab character',
               'Indentation': 'Incorrect indentation level',
               'LineLength': 'Line is longer than 100 characters',
               'LocalVariableName': 'Local variable name must match pattern ^[a-z][a-zA-Z0-9]*$',
               'MagicNumber': 'Avoid magic numbers',
               'MissingJavadoc(Method|Type)': 'Missing a Javadoc comment',
               'UnusedImports': 'Unused imports',
               'WhitespaceAround': 'Operators and operands are not preceded with whitespace' } %>

  <% rules.each do |name, description| %>
    <div class="custom-control custom-checkbox mb-1">
      <%= form.check_box("options[checkstyle][#{name}]", class: 'custom-control-input', checked: true) %>
      <label class="custom-control-label" for="options[checkstyle][<%= name %>]" aria-describedby="<%= name %>-help">
        <%= name %>
      </label>
      <small id="<%= name %>-help" class="form-text text-muted mt-0">
        <%= description %>
      </small>
    </div>
  <% end %>

  <div class="mt-2">
    <a href="https://pages.github.ncsu.edu/engr-csc116-staff/CSC116-Materials/course-resources/style-guidelines/formatting-code.html"
       target="_blank">
      <u>CSC 116 Java Style Guidelines</u>
    </a>
  </div>
</div>