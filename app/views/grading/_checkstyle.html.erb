<div class="row mb-4">
  <div class="col-lg-6">
    <h3>Compiled Classes</h3>
    <%= form_tag({action: :checkstyle}, multipart: true, id: @id) do %>
      <div class="form-group">
        <ul class="list-group mb-2">
          <% Dir.glob(Rails.root.join('public', 'uploads', @id, '**', '*.java')).sort.each do |filepath| %>
            <li class="list-group-item d-flex justify-content-between align-items-center code">
              <%= filename = File.basename(filepath) %>
              <% checked = filename.exclude? 'UI' %>
              <div class="custom-control custom-checkbox">
                <%= check_box :filepaths, filepath, class: 'custom-control-input', checked: checked %>
                <label class="custom-control-label" for="filepaths_<%= filepath %>"></label>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="custom-control custom-checkbox mb-2">
        <%= check_box :options, 'ignore', class: 'custom-control-input' %>
        <label class="custom-control-label" for="options_ignore">Ignore magic numbers</label>
      </div>
      <%= submit_tag 'Run checkstyle', class: 'btn btn-primary' %>
      <%#= submit_tag 'Run for selected', class: 'btn btn-outline-primary' %>
    <% end %>
  </div>
</div>
<div class="row mb-4">
  <div class="col-lg-6">
    <h3>Result</h3>
    <div class="card">
      <h3 class="card-header d-flex justify-content-between align-items-center">
        Total
        <span class="badge badge-dark"><%= @cs_count&.sum { |_, v| v } %></span>
      </h3>
      <ul class="list-group list-group-flush">
        <% @cs_count&.each do |f, c| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span class="code"><%= f %></span>
            <span class="badge badge-warning badge-pill"><%= c %></span>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
