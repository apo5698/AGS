<h3>Checkstyle Rules</h3>
<div class="form-group" id="javadoc-rules">
  <% RubricItem::Checkstyle::RULES.each do |rule, description| %>
    <div class="custom-control custom-checkbox mb-1">
      <%= form.check_box(rule, class: 'custom-control-input', checked: true) %>
      <label class="custom-control-label" for="_options_<%= rule %>"><%= rule %></label>
      <small id="<%= rule %>-help" class="form-text text-muted mt-0"><%= description %></small>
    </div>
  <% end %>

  <div class="m-2">
    <a href="https://pages.github.ncsu.edu/engr-csc116-staff/CSC116-Materials/course-resources/style-guidelines/formatting-code.html"
       target="_blank">
      <u>CSC 116 Java Style Guidelines</u>
    </a>
  </div>
</div>
