<% url = "/courses/#{@course.id}/assignments/#{@assignment.id}" %>
<% html = "<li class='breadcrumb-item'><a href=#{url}>#{@assignment.name}</a></li><li class='breadcrumb-item active'>Grading</li>".html_safe %>
<%= render partial: '/assignments/header', locals: {html: html} %>

<div class="row">
  <div class="col-lg-3">
    <%= render partial: '/assignments/sidebar' %>
  </div>
  <div class="col-lg-9">
    <div class="d-flex justify-content-center">
      <nav aria-label="Page navigation example" class="table-responsive">
        <ul class="pagination">
          <% @rubric_items.each do |rubric_item| %>
            <li class="page-item <%= 'active' if rubric_item.id == @rubric_item.id %>">
              <a class="page-link h-100" href="?id=<%= rubric_item.id %>"><%= rubric_item.rubric_item_type %></a></li>
          <% end %>
        </ul>
      </nav>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <%= render partial: '/grading/output_table', locals: {table_for: :graded} %>
      </div>
      <div class="col-lg-6">
        <%= render partial: '/grading/output_table', locals: {table_for: :other} %>
      </div>
    </div>
    <div class="float-right">
      <button class="btn btn-primary">Grade all</button>
      <button class="btn btn-secondary">Next</button>
    </div>
  </div>
</div>
