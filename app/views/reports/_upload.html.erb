<div class="row">
  <div class="col-lg-8">
    <%= form_with(url: { controller: 'reports', action: 'upload' }) do |f| %>
      <div class="form-group">
        <div class="input-group">
          <div class="custom-file">
            <%= f.file_field(:csv, class: 'custom-file-input', accept: '.csv', required: true) %>
            <%= f.label(:csv, 'Choose file', class: 'custom-file-label') %>
          </div>
          <div class="input-group-append">
            <%= f.submit('Upload', class: 'input-group-text') %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.label(:filename, 'Uploaded grading sheet') %>
        <%= f.text_field(:filename, class: 'form-control', placeholder: @assignment.csv.filename.to_s, readonly: true) %>
      </div>
    <% end %>
  </div>
</div>